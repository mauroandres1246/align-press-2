{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://align-press.com/schemas/variant.schema.json",
  "title": "Size Variant Schema",
  "description": "Schema for size variant configuration",
  "type": "object",
  "required": ["version", "name", "type"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Profile version number"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable variant name"
    },
    "type": {
      "type": "string",
      "enum": ["size_variant"],
      "description": "Profile type identifier"
    },
    "description": {
      "type": "string",
      "description": "Variant description"
    },
    "position_offsets": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "properties": {
            "dx_mm": {
              "type": "number",
              "description": "X offset in millimeters"
            },
            "dy_mm": {
              "type": "number",
              "description": "Y offset in millimeters"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "description": "Position offsets per logo name"
    },
    "roi_adjustments": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "properties": {
            "width_factor": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 3.0,
              "description": "ROI width scaling factor"
            },
            "height_factor": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 3.0,
              "description": "ROI height scaling factor"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "description": "ROI adjustments per logo name"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "applicable_styles": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of style names this variant applies to"
        },
        "size_category": {
          "type": "string",
          "enum": ["infant", "child", "adult"],
          "description": "Size category"
        },
        "chest_width_cm": {
          "type": "number",
          "minimum": 0,
          "description": "Chest width in centimeters"
        },
        "created_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Creation date (YYYY-MM-DD)"
        },
        "created_by": {
          "type": "string",
          "description": "Creator identifier"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}